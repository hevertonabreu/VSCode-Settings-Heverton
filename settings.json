{
    // Define o tema do VSCode
    "workbench.colorTheme": "Dracula",
  
    // Configura tamanho e altura da linha
    "editor.fontSize": 18,
    "editor.lineHeight": 24,

    //Configura a família da fonte e aciona o fontLigatures
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
  
    // Aplica linhas verticais para lembrar de quebrar linha em códigos muito grandes
    "editor.rulers": [80, 120],
    "editor.formatOnSave": false,
      
    // Aplica um sinal visual na esquerda da linha selecionada
    "editor.renderLineHighlight": "gutter",
  
    // Aumenta a fonte do terminal
    "terminal.integrated.fontSize": 14,
  
    // Define o tema dos ícones na sidebar
    "workbench.iconTheme": "material-icon-theme",

    // Abre sempre um arquivo em branco
    "workbench.startupEditor": "newUntitledFile",

    // Define a quantidade de espaços do TAB
    "editor.tabSize": 2,

    // Define o nível de Zoom da janela
    "window.zoomLevel": 1,

    // Desativa ignorar recomendações de extensões
    "extensions.ignoreRecommendations": false,
    
    // Desativar um conjunto de commits recentes
    "gitlens.codeLens.recentChange.enabled": false,

    // Desativa para não mostrar o número de autores do arquivo ou bloco de código.
    "gitlens.codeLens.authors.enabled": false,

    // Desativa a mensagem de postagens do código
    "gitlens.codeLens.enabled":false,
        
    // Habilita smart commit do git
    "git.enableSmartCommit": true,

    // Desabilita Integração do Pretiter com o ESLint.
    "editor.parameterHints.enabled": false,
    
    // Habilita integração da extensão local.
    "liveshare.featureSet": "insiders",
    
    // Desabilita a confirmação de exclusão do explorer ao lado.
    "explorer.confirmDelete": false,

    // Se definido como true, a extensão usará o ícone JSON oficial.
    "vsicons.presets.jsonOfficial": true,
  }
  /*
    Extensões:
    Arduino (estudado)
    Auto Rename Tag
    C/C++
    C/C++ Extension Pack
    Code Runner
